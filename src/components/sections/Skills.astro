---
import Section from '../ui/Section.astro';
import Card from '../ui/Card.astro';

interface Skill {
  name: string;
  icon: string;
  color: string;
  level: number;
}
interface SkillGroup {
  title: string;
  skills: Skill[];
}

const skillGroups: SkillGroup[] = [
  {
    title: 'Data Analytics / Analytics Engineering',
    skills: [
      { name: 'Azure Databricks', icon: 'D', color: '#0078D7', level: 90 },
      { name: 'SAP', icon: 'S', color: '#0C70C1', level: 80 }
    ]
  },
  {
    title: 'Data Visualisation',
    skills: [
      { name: 'Power BI', icon: 'P', color: '#F2C811', level: 95 },
      { name: 'Tableau', icon: 'T', color: '#E97627', level: 90 },
      { name: 'Shiny (R)', icon: 'R', color: '#75AADB', level: 85 },
      { name: 'Dash (Python)', icon: 'D', color: '#001529', level: 85 }
    ]
  },
  {
    title: 'Data Science',
    skills: [
      { name: 'Machine Learning', icon: 'M', color: '#FF9900', level: 95 },
      { name: 'Time Series Analysis', icon: 'T', color: '#8A2BE2', level: 90 }
    ]
  },
  {
    title: 'Langages',
    skills: [
      { name: 'SQL', icon: 'S', color: '#00758F', level: 100 },
      { name: 'R', icon: 'R', color: '#276DC3', level: 90 },
      { name: 'Python', icon: 'P', color: '#3776AB', level: 95 },
      { name: 'PySpark', icon: 'P', color: '#E05800', level: 85 }
    ]
  },
  {
    title: 'DevOps',
    skills: [
      { name: 'GitLab', icon: 'G', color: '#FC6D26', level: 100 },
      { name: 'Docker', icon: 'D', color: '#2496ED', level: 85 },
      { name: 'CI/CD', icon: 'C', color: '#FF4081', level: 95 }
    ]
  },
  {
    title: 'Méthodologie & Gestion de projet',
    skills: [
      { name: 'Kanban', icon: 'K', color: '#047857', level: 100 },
      { name: 'Jira', icon: 'J', color: '#0052CC', level: 95 },
      { name: 'Recueil des besoins', icon: 'R', color: '#10B981', level: 90 },
      { name: 'Pilotage transversal des projets data', icon: 'P', color: '#FBBF24', level: 90 }
    ]
  }
];
---

<Section id="skills" title="Compétences Techniques" subtitle="Technologies et outils maîtrisés">
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
    {skillGroups.map(group => (
      <Card class="p-6">
        <h3 class="text-xl font-bold mb-6 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mr-2 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          {group.title}
        </h3>
        <div>
          {group.skills.map(skill => (
            <div class="flex items-center gap-4 mb-4">
              <div class="w-12 h-12 flex items-center justify-center rounded-xl" style={`background-color: ${skill.color}20`}>
                <span class="text-xl font-bold" style={`color: ${skill.color}`}>{skill.icon}</span>
              </div>
              <div class="flex-1">
                <div class="flex justify-between mb-1">
                  <span class="font-medium">{skill.name}</span>
                  <span class="text-sm text-gray-500 dark:text-gray-400">{skill.level}%</span>
                </div>
                <div class="h-2 w-full bg-gray-200 dark:bg-gray-700 rounded-full">
                  <div class="h-2 rounded-full" style={`width: ${skill.level}%; background-color: ${skill.color}`}></div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </Card>
    ))}
  </div>
</Section>
