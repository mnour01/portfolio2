---
import Section from '../ui/Section.astro';
import Card from '../ui/Card.astro';

interface Skill {
  name: string;
  icon: string;
  color: string;
  level: number;
}

const frontendSkills: Skill[] = [
  { name: 'React', icon: 'react', color: '#61DAFB', level: 90 },
  { name: 'Vue.js', icon: 'vuejs', color: '#4FC08D', level: 85 },
  { name: 'TypeScript', icon: 'typescript', color: '#3178C6', level: 90 },
  { name: 'JavaScript', icon: 'javascript', color: '#F7DF1E', level: 95 },
  { name: 'HTML5', icon: 'html5', color: '#E34F26', level: 95 },
  { name: 'CSS3', icon: 'css3', color: '#1572B6', level: 90 },
];

const frameworkSkills: Skill[] = [
  { name: 'Next.js', icon: 'nextjs', color: '#000000', level: 80 },
  { name: 'Nuxt.js', icon: 'nuxtjs', color: '#00DC82', level: 75 },
  { name: 'Tailwind CSS', icon: 'tailwindcss', color: '#06B6D4', level: 85 },
  { name: 'Astro', icon: 'astro', color: '#BC52EE', level: 70 },
  { name: 'Redux', icon: 'redux', color: '#764ABC', level: 80 },
  { name: 'GraphQL', icon: 'graphql', color: '#E10098', level: 75 },
];

const devToolsSkills: Skill[] = [
  { name: 'Git', icon: 'git', color: '#F05032', level: 90 },
  { name: 'Docker', icon: 'docker', color: '#2496ED', level: 75 },
  { name: 'Jest', icon: 'jest', color: '#C21325', level: 80 },
  { name: 'Webpack', icon: 'webpack', color: '#8DD6F9', level: 75 },
  { name: 'Vite', icon: 'vite', color: '#646CFF', level: 80 },
  { name: 'Node.js', icon: 'nodejs', color: '#339933', level: 75 },
];
---

<Section id="skills" title="Habilidades TÃ©cnicas" subtitle="Tecnologias e ferramentas que domino e utilizo nos meus projetos">
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
    <!-- Frontend Skills -->
    <Card class="p-6">
      <h3 class="text-xl font-bold mb-6 flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mr-2 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
        Frontend
      </h3>
      <div>
        {frontendSkills.map(skill => (
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 flex items-center justify-center rounded-xl" style={`background-color: ${skill.color}20`}>
              <span class="text-xl font-bold" style={`color: ${skill.color}`}>{skill.icon.charAt(0).toUpperCase()}</span>
            </div>
            <div class="flex-1">
              <div class="flex justify-between mb-1">
                <span class="font-medium">{skill.name}</span>
                <span class="text-sm text-gray-500 dark:text-gray-400">{skill.level}%</span>
              </div>
              <div class="h-2 w-full bg-gray-200 dark:bg-gray-700 rounded-full">
                <div class="h-2 rounded-full" style={`width: ${skill.level}%; background-color: ${skill.color}`}></div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </Card>

    <!-- Framework Skills -->
    <Card class="p-6">
      <h3 class="text-xl font-bold mb-6 flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mr-2 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
        </svg>
        Frameworks
      </h3>
      <div>
        {frameworkSkills.map(skill => (
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 flex items-center justify-center rounded-xl" style={`background-color: ${skill.color}20`}>
              <span class="text-xl font-bold" style={`color: ${skill.color}`}>{skill.icon.charAt(0).toUpperCase()}</span>
            </div>
            <div class="flex-1">
              <div class="flex justify-between mb-1">
                <span class="font-medium">{skill.name}</span>
                <span class="text-sm text-gray-500 dark:text-gray-400">{skill.level}%</span>
              </div>
              <div class="h-2 w-full bg-gray-200 dark:bg-gray-700 rounded-full">
                <div class="h-2 rounded-full" style={`width: ${skill.level}%; background-color: ${skill.color}`}></div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </Card>

    <!-- Dev Tools Skills -->
    <Card class="p-6">
      <h3 class="text-xl font-bold mb-6 flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mr-2 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        Dev Tools
      </h3>
      <div>
        {devToolsSkills.map(skill => (
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 flex items-center justify-center rounded-xl" style={`background-color: ${skill.color}20`}>
              <span class="text-xl font-bold" style={`color: ${skill.color}`}>{skill.icon.charAt(0).toUpperCase()}</span>
            </div>
            <div class="flex-1">
              <div class="flex justify-between mb-1">
                <span class="font-medium">{skill.name}</span>
                <span class="text-sm text-gray-500 dark:text-gray-400">{skill.level}%</span>
              </div>
              <div class="h-2 w-full bg-gray-200 dark:bg-gray-700 rounded-full">
                <div class="h-2 rounded-full" style={`width: ${skill.level}%; background-color: ${skill.color}`}></div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </Card>
  </div>
</Section> 