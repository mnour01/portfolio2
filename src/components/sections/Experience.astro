---
import Section from '../ui/Section.astro';
import Card from '../ui/Card.astro';

// Get the company logos
interface Experience {
  company: string;
  logo: string;
  position: string;
  period: string;
  description: string;
}

const experiences: Experience[] = [
{
    company: 'Linx',
    logo: '/assets/svgs/linx.jpeg',
    position: 'Desenvolvedor Front-end Senior',
    period: 'Jan 2025 - Atual',
    description: 'Atuo como Desenvolvedor Front-End Sênior no desenvolvimento de um ERP corporativo, utilizando Vue 3 (Nuxt 3) e Node.js (NestJS).'
  },
  {
    company: 'Luizalabs',
    logo: '/assets/svgs/luizalabs.jpeg',
    position: 'Desenvolvedor Front-end (Full Stack)',
    period: 'Set 2024 - Dez 2024',
    description: 'Atuei na squad Freedom, sustentando a plataforma de e-commerce Netshoes (e mais 14 lojas), utilizada por milhões de clientes..'
  },
  {
    company: 'QuintaAndar',
    logo: '/assets/svgs/quintoandar.jpeg',
    position: 'Engenheiro de Software Senior',
    period: 'Out 2021 - Dez 2023',
    description: 'Atuei como referência na squad Credit Experience, implementando Micro Frontends e Microsserviços, arquiteturas escaláveis com React, Java, Python e Node.'
  },
  {
    company: 'Atta',
    logo: '/assets/svgs/atta.jpeg',
    position: 'Desenvolvedor Front-end',
    period: 'Set 2020 - Out 2021',
    description: 'Desenvolvimento de aplicações SPAs com Vue.js (Sistemas internos, Dashboard, etc) integração com APIs RESTful e autenticação OAuth.'
  },
  {
    company: 'InstaCarro',
    logo: '/assets/svgs/instacarro.jpeg',
    position: 'Desenvolvedor Front-end',
    period: 'Jan 2020 - Jul 2021',
    description: 'Implementação de interfaces para plataforma de guia de veículos usados com React e GraphQL, integração com APIs RESTful.  '
  },
  {
    company: 'Somai',
    logo: '/assets/svgs/somai.jpeg',
    position: 'Desenvolvedor Web Senior',
    period: 'Jan 2016 - Dez 2019',
    description: 'Desenvolvimento de diversas aplicações web, utilizando principalmente WordPress, PHP, MySQL, HTML, CSS e JavaScript.'
  }
];
---

<Section id="experience" title="Experiência Profissional" subtitle="Onde deixei minha sanidade em troca de tickets e deploys urgentes. ">
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    {
      experiences.map(({ company, logo, position, period, description }) => (
        <Card hover={true} class="h-full">
          <div class="p-6 flex flex-col h-full">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-gray-100 dark:bg-gray-800 rounded-lg overflow-hidden flex items-center justify-center mr-4">
                <img src={logo} alt={company} class="w-10 h-10 object-contain" />
              </div>
              <div>
                <h3 class="font-bold text-xl">{company}</h3>
                <p class="text-sm text-gray-500 dark:text-gray-400">{period}</p>
              </div>
            </div>
            
            <h4 class="text-lg font-medium mb-2 text-primary">{position}</h4>
            <p class="text-gray-600 dark:text-gray-300 text-sm mt-auto">{description}</p>
          </div>
        </Card>
      ))
    }
  </div>
</Section> 